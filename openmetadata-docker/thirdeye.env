# ThirdEye Integration Environment Variables
# Use with: docker-compose -f docker-compose.yml -f docker-compose.thirdeye.yml --env-file thirdeye.env up

# ThirdEye Service Configuration
THIRDEYE_ENABLED=true
THIRDEYE_HOST=thirdeye
THIRDEYE_PORT=8586
THIRDEYE_BASE_PATH=/api/v1/thirdeye
THIRDEYE_TIMEOUT=30000
THIRDEYE_RETRY_ATTEMPTS=3
THIRDEYE_RETRY_DELAY=1000

# ThirdEye SSL Configuration (disabled for local development)
THIRDEYE_SSL_ENABLED=false
THIRDEYE_SSL_VERIFY_HOSTNAME=true
THIRDEYE_SSL_TRUST_ALL_CERTIFICATES=false

# Production SSL Configuration (uncomment for production)
# THIRDEYE_SSL_ENABLED=true
# THIRDEYE_SSL_KEYSTORE_PATH=/etc/ssl/keystore.jks
# THIRDEYE_SSL_KEYSTORE_PASSWORD=changeit
# THIRDEYE_SSL_TRUSTSTORE_PATH=/etc/ssl/truststore.jks
# THIRDEYE_SSL_TRUSTSTORE_PASSWORD=changeit
