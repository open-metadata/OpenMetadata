{
  "$id": "https://open-metadata.org/schema/entity/services/connections/messaging/kafkaConnection.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "KafkaConnection",
  "description": "Kafka Connection Config",
