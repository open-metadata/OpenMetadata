    "schemaRegistryURL": {
      "title": "Schema Registry URL",
      "description": "Confluent Kafka Schema Registry URL.",
      "type": "string",
      "format": "uri",
      "default": "http://localhost:8081"
    },
    "consumerConfig": {
      "title": "Consumer Config",
      "description": "Confluent Kafka Consumer Config",
