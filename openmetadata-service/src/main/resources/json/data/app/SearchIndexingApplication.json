{
  "name": "SearchIndexingApplication",
  "displayName": "Search Indexing",
  "boundType": "Global",
  "configuration": {
    "globalAppConfig": {
      "config": {
        "entities": [
          "all"
        ],
        "recreateIndex": false,
        "batchSize": "100",
        "payLoadSize": 104857600,
        "producerThreads": 1,
        "consumerThreads": 1,
        "queueSize": 100,
        "maxConcurrentRequests": 100,
        "maxRetries": 3,
        "initialBackoff": 1000,
        "maxBackoff": 10000,
        "searchIndexMappingLanguage": "EN",
        "autoTune": false
      },
      "schedule": {
        "scheduleTimeline": "Custom",
        "cronExpression": "0 0 * * *"
      }
    }
  },
  "supportsInterrupt": true
}
