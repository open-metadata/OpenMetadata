{
  "$id": "https://open-metadata.org/schema/entity/services/connections/database/pgspiderConnection.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PGSpiderConnection",
  "description": "PGSpider Database Connection Config",
  "type": "object",
  "javaType": "org.openmetadata.schema.services.connections.database.PGSpiderConnection",
  "definitions": {
    "PGSpiderType": {
      "description": "Service type.",
      "type": "string",
      "enum": ["PGSpider"],
      "default": "PGSpider"
    },
    "PGSpiderScheme": {
      "description": "SQLAlchemy driver scheme options.",
      "type": "string",
      "enum": ["pgspider+psycopg2"],
      "default": "pgspider+psycopg2"
    }
  },
  "properties": {
    "type": {
      "title": "Service Type",
      "description": "Service Type",
      "$ref": "#/definitions/PGSpiderType",
      "default": "PGSpider"
    },
    "scheme": {
      "title": "Connection Scheme",
      "description": "SQLAlchemy driver scheme options.",
      "$ref": "#/definitions/PGSpiderScheme",
      "default": "pgspider+psycopg2"
    },
    "username": {
      "title": "Username",
      "description": "Username to connect to PGSpider. This user should have privileges to read all the metadata in PGSpider.",
      "type": "string"
    },
    "password": {
      "title": "Password",
      "description": "Password to connect to PGSpider.",
      "type": "string",
      "format": "password"
    },
    "hostPort": {
      "title": "Host and Port",
      "description": "Host and port of the PGSpider service.",
      "type": "string"
    },
    "database": {
      "title": "Database",
      "description": "Database of the data source. This is optional parameter, if you would like to restrict the metadata reading to a single database. When left blank, OpenMetadata Ingestion attempts to scan all the databases.",
      "type": "string"
    },
    "sslMode": {
      "title": "SSL Mode",
      "description": "SSL Mode to connect to PGSpider database.",
      "enum": ["disable", "allow", "prefer", "require", "verify-ca", "verify-full"],
      "default": "disable"
    },
    "sslConfig": {
      "$ref": "../../../../security/ssl/verifySSLConfig.json#/definitions/sslConfig"
    },
    "classificationName": {
      "title": "Classification Name",
      "description": "Custom OpenMetadata Classification name for PGSpider policy tags.",
      "type": "string",
      "default": "PGSpiderPolicyTags"
    },
    "ingestAllDatabases": {
      "title": "Ingest All Databases",
      "description": "Ingest data from all databases in PGSpider. You can use databaseFilterPattern on top of this.",
      "type": "boolean",
      "default": false
    },
    "connectionOptions": {
      "title": "Connection Options",
      "$ref": "../connectionBasicType.json#/definitions/connectionOptions"
    },
    "connectionArguments": {
      "title": "Connection Arguments",
      "$ref": "../connectionBasicType.json#/definitions/connectionArguments"
    },
    "supportsMetadataExtraction": {
      "title": "Supports Metadata Extraction",
      "$ref": "../connectionBasicType.json#/definitions/supportsMetadataExtraction"
    },
    "supportsUsageExtraction": {
      "$ref": "../connectionBasicType.json#/definitions/supportsUsageExtraction"
    },
    "supportsLineageExtraction": {
      "$ref": "../connectionBasicType.json#/definitions/supportsLineageExtraction"
    },
    "supportsDBTExtraction": {
      "$ref": "../connectionBasicType.json#/definitions/supportsDBTExtraction"
    },
    "supportsProfiler": {
      "title": "Supports Profiler",
      "$ref": "../connectionBasicType.json#/definitions/supportsProfiler"
    },
    "supportsDatabase": {
      "title": "Supports Database",
      "$ref": "../connectionBasicType.json#/definitions/supportsDatabase"
    },
    "supportsQueryComment": {
      "title": "Supports Query Comment",
      "$ref": "../connectionBasicType.json#/definitions/supportsQueryComment"
    }
  },
  "additionalProperties": false,
  "required": ["hostPort", "username", "database"]
}
