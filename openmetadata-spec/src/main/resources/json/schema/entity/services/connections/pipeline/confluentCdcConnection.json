{
  "$id": "https://open-metadata.org/schema/entity/services/connections/pipeline/confluentCdcConnection.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConfluentCdcConnection",
  "description": "Confluent CDC Connection Config for MySQL to Postgres CDC pipelines",
  "type": "object",
  "javaType": "org.openmetadata.schema.services.connections.pipeline.ConfluentCdcConnection",
  "definitions": {
    "confluentCdcType": {
      "description": "Service type.",
      "type": "string",
      "enum": ["ConfluentCDC"],
      "default": "ConfluentCDC"
    },
    "basicAuthentication": {
      "title": "Username/Password Authentication",
      "description": "username/password auth",
      "type": "object",
      "properties": {
        "username": {
          "title": "Username",
          "description": "Confluent CDC user to authenticate to the API.",
          "type": "string"
        },
        "password": {
          "title": "Password",
          "description": "Confluent CDC password to authenticate to the API.",
          "type": "string",
          "format": "password"
        }
      },
      "additionalProperties": false
    },
    "apiKeyAuthentication": {
      "title": "API Key Authentication",
      "description": "Confluent Cloud API Key auth",
      "type": "object",
      "properties": {
        "apiKey": {
          "title": "API Key",
          "description": "Confluent Cloud API Key.",
          "type": "string"
        },
        "apiSecret": {
          "title": "API Secret",
          "description": "Confluent Cloud API Secret.",
          "type": "string",
          "format": "password"
        }
      },
      "additionalProperties": false,
      "required": ["apiKey", "apiSecret"]
    }
  },
  "properties": {
    "type": {
      "title": "Service Type",
      "description": "Service Type",
      "$ref": "#/definitions/confluentCdcType",
      "default": "ConfluentCDC"
    },
    "hostPort": {
      "expose": true,
      "title": "Host And Port",
      "description": "Confluent Kafka Connect REST API URL (e.g., https://pkc-xxxxx.us-east-1.aws.confluent.cloud:443 or http://localhost:8083)",
      "type": "string",
      "format": "uri"
    },
    "confluentCdcConfig": {
      "title": "Confluent CDC Credentials Configuration",
      "description": "We support username/password, API Key, or No Authentication",
      "oneOf": [
        {
          "$ref": "#/definitions/basicAuthentication"
        },
        {
          "$ref": "#/definitions/apiKeyAuthentication"
        }
      ]
    },
    "verifySSL": {
      "title": "Verify SSL",
      "description": "Boolean marking if we need to verify the SSL certs for Confluent CDC REST API. True by default.",
      "type": "boolean",
      "default": true
    },
    "pipelineFilterPattern": {
      "description": "Regex to exclude CDC pipelines/connectors.",
      "$ref": "../../../../type/filterPattern.json#/definitions/filterPattern",
      "title": "Default Pipeline Filter Pattern"
    },
    "supportsMetadataExtraction": {
      "title": "Supports Metadata Extraction",
      "$ref": "../connectionBasicType.json#/definitions/supportsMetadataExtraction"
    }
  },
  "additionalProperties": false,
  "required": ["hostPort"]
}
